@model AdPortal.Infrastructure.DTO.AdDTO

@{
    ViewData["Title"] = "Change Status";
}

<h2>Details</h2>
<h4>Created by <a asp-controller="Home" asp-action="UserDetails" asp-route-id="@Model.UserId">@Html.DisplayFor(model => model.UserName)</a></h4>
<h4>Ad title: @Html.DisplayFor(model => model.Name)</h4>
<h4>Ad Content:</h4>

   
   
        <div class="card">
            <div class="card-body">
        @Html.DisplayFor(model => model.Content)
        </div>
        </div>
         
   
    



 <form asp-action="ChangeStatus">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<AdPortal.Core.Domain.Status>()"></select>
           </div>
<div class="form-group">
 <input type="submit" value="ChangeStatus" class="btn btn-default" />
 </div>
 </form>
